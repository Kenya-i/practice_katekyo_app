<h2>生徒用の登録ページ</h2>

<%= form_with model: @student do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>
  </div>
  <div>
    <%= f.label :school %>
    <%= f.text_field :school %>
  </div>
  <div>
    <%= f.label :parent_email %>
    <%= f.text_field :parent_email %>
  </div>
  <%= f.submit "送信"%>
<% end %>
