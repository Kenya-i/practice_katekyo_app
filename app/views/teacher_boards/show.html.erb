
<div>
  先生: <%= @teacher_board.teacher.name %>
</div>
<div>
  タイトル: <%= @teacher_board.title %>
</div>
<div>
  教科: <%= @teacher_board.subject %>
</div>
<div>
  授業内容: <%= @teacher_board.content %>
</div>
<div>
  値段: <%= @teacher_board.price %>
</div>

<% if current_parent?(current_user) %>
  <div class="contract-container" >
    <%= form_with(model: current_user.contracts.build) do |f| %>
      <div><%= hidden_field_tag :parent_id, current_user.id %></div>
      <%= f.submit "契約する" %>
    <% end %>
  </div>
<% end %>
